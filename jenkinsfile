pipeline {
    agent any 
           stages {
              stage('install') {
                 steps {
                    sh 'yum install httpd'
                       }
                    }					   
                stage('start') {
                 steps {
                    sh 'service httpd start'
                       }
                    }
					 stage('bulid') {
                 steps {
                    sh 'touch x.txt'
					sh 'echo "<h1>Hello World from $(hostname -f)</h1>" > /var/www/html/index.html'
                       }
                    }		
				}
			}
